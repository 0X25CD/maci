        vk.IC[3] = Pairing.G1Point(uint256(7639757070994300466438712186656404364472945267792459915055506580390350423372), uint256(16558384425281091312455549336839261815201872803859224499908510284949757765863));
        vk.IC[4] = Pairing.G1Point(uint256(13640227874124314639534333851618413290636437393019479309681453471846165902112), uint256(11930773529230912995620328045991120711553101998756707267173302680709151056592));
