        "@types/jest": "^24.0.25",
        "ts-jest": "^24.2.0",
        "jest": "^24.9.0",
        "ganache-cli": "^6.7.0",
        "libsemaphore": "^1.0.5",
        "truffle-artifactor": "^4.0.30"
    }
